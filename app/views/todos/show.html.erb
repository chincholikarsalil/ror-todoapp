<h2>Showing a todo</h2>

<p>
  Name: <%= @todo.name %>
</p>

<p>
  Description: <%= @todo.description %>
</p>

<%= link_to "Edit this todo", edit_todo_path(@todo) %> | 
<%= link_to "Back to todos listing", todos_path %> |
<%= link_to "Delete", todo_path(@todo), method: :delete, data: {confirm: "Are you sure?"} %>